<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bba.fpgl.dao.IPayment_invoice_DetailDao">
    <sql id="begin_page">
        <if test="isPage == true">select A.* from (select rownum rn, T.* from (</if>
    </sql>
    <sql id="end_page">
        <if test="isPage == true">)T where rownum &lt; ${page*rows+1}) A where A.rn >
            ${(page-1)*rows}</if>
    </sql>

    <!--发票字段-->
    <sql id="invoiceDetail">
		select *
		from js_payment_invoice_detail d
	</sql>

    <!-- 查询台账列表 -->
    <select id="findListForGrid" resultType="com.bba.fpgl.vo.Payment_invoice_DetailVO" parameterType="com.bba.util.JqGridParamModel">
        <include refid="begin_page" />
        select t.* from (
        <include refid="invoiceDetail" />
        ) t
        <if test="filters!=null and filters!=''">where ${filters}</if>
        <include refid="end_page" />
    </select>

    <!-- 查询台账数量 -->
    <select id="findListForGridCount" resultType="int" parameterType="com.bba.util.JqGridParamModel">
        select count(*) from (
        <include refid="invoiceDetail" />
        ) t
        <if test="filters!=null and filters!=''">where ${filters}</if>
    </select>
</mapper>